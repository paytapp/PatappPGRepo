package com.paymentgateway.ewallet;

import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.boot.builder.SpringApplicationBuilder;
import org.springframework.context.annotation.ComponentScan;

import com.paymentgateway.api.PaymentGatewayApiApplication;

@SpringBootApplication
@ComponentScan({ "com.paymentgateway.commons", "com.paymentgateway.api","com.paymentgateway" })

public class PaymentGatewayEwalletApplication {

	public static void main(String[] args) {
		SpringApplication.run(PaymentGatewayApiApplication.class, args);
		
	}
	
	 @Override
	  protected SpringApplicationBuilder configure(SpringApplicationBuilder builder) {
	      return builder.sources(PaymentGatewayApiApplication.class);
	  }

}
